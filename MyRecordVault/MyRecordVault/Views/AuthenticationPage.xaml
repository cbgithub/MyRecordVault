<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyRecordVault.Views.AuthenticationPage"
             BackgroundColor="Black"
             Title="Welcome">
    <RelativeLayout>
        <Image Source="Vault.JPG" Opacity="1.0" 
                RelativeLayout.WidthConstraint=
                  "{ConstraintExpression Type=RelativeToParent, Property=Width}"
                RelativeLayout.HeightConstraint=
                  "{ConstraintExpression Type=RelativeToParent, Property=Height}"/>
        <Grid RelativeLayout.WidthConstraint=
              "{ConstraintExpression Type=RelativeToParent, Property=Width}"
            RelativeLayout.HeightConstraint=
              "{ConstraintExpression Type=RelativeToParent, Property=Height}">
            <StackLayout VerticalOptions="EndAndExpand">
                <Button Text="Login In" Font="Large" BackgroundColor="#5ABAFF"  VerticalOptions="Center" TextColor="White"  Clicked="OnAuthenticate"></Button>
            </StackLayout>
            
        </Grid>
    </RelativeLayout>
</ContentPage>