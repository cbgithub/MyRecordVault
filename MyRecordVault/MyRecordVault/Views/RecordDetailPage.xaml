<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyRecordVault.Views.RecordDetailPage">
    <Frame BindingContext="{Binding Record.Value}" BackgroundColor="#5ABAFF">
        <StackLayout BackgroundColor="#f0f7ff" Spacing="10" Padding="10">
            <Entry Text="{Binding Title}" Placeholder="Title"></Entry>
            <Entry Text="{Binding UserName}" Placeholder="User Name"></Entry>
            <Entry Text="{Binding Password}" Placeholder="Password"></Entry>
            <StackLayout Padding="0, 0, 0, 20">
                <Label Text="Notes:" />
                <Editor Text="{Binding Note}" HeightRequest="150" />
            </StackLayout>
            <Button Text="Save" BackgroundColor="#A6E55E" TextColor="White" Command="{Binding Save}"></Button>
            <Button Text="Delete" BackgroundColor="#A6E55E" TextColor="White" Command="{Binding Delete}"></Button>
        </StackLayout>
    </Frame>
</ContentPage>